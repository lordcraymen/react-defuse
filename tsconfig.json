{
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "module": "commonjs",
      "target": "es5",
      "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "./src",
      "strict": true, 
      "noImplicitAny": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  